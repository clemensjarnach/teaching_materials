% Reformat Title Page
\setbeamercolor{title}{fg=white}
\setbeamercolor{author}{fg=white}
\setbeamercolor{institute}{fg=white}
\setbeamercolor*{subtitle}{fg=white}
\setbeamercolor{structure}{fg=oxfordblue}
\setbeamercolor*{date}{fg=white}
\setbeamerfont*{date}{size=\small}
\setbeamercolor{section}{fg=oxfordblue}
\setbeamercolor{subsection}{fg=oxfordblue}


\setbeamertemplate{title page}{
    % \setbeamercolor{background canvas}{bg=oxfordblue}%  blue background
    \vspace{1cm}
    
    \begin{centering}
        {
        % \usebeamerfont{title}
        \LARGE
        \usebeamercolor[fg]{title}
        \inserttitle\\[.5cm]
        \insertframesubtitle
        }
        {
        % \usebeamerfont{subtitle}
        \large
        \usebeamercolor[fg]{subtitle}
        \insertauthor\\[0.5cm]
        }
        {
        % \usebeamerfont{subtitle}
        \small
        \usebeamercolor[fg]{subtitle}
        \insertinstitute\\[1cm]
        }
    \end{centering}
    
    \begin{flushright}
        {
        \usebeamerfont{date}
        \usebeamercolor[fg]{date}
        \insertdate
        }
    \end{flushright}
    
    \begin{picture}(0,0)
        \put(0,10){%
            \pgfuseimage{soclogo1}
        }
    \end{picture}
    
    \begin{picture}(0,0)
        \put(300,250){%
            \pgfuseimage{oxfordlogo}
        }
    \end{picture}
    
    \newcommand{\maketitleoxstats}{
        \setbeamertemplate{footline}{} %removefootline for this slide
        \setbeamertemplate{headline}{}
        
        \setbeamercolor{background canvas}{bg=oxfordblue}
        \maketitle
        \setbeamercolor{background canvas}{bg=}
        
    }
}

